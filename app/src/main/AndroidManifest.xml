<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.plantcareapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlantcareApp">
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_homapage"
            android:theme="@style/Theme.PlantcareApp.NoActionBar"></activity>
        <activity android:name=".AlertPage"></activity>
        <activity android:name=".PlantList" />
        <activity android:name=".PlantDetail" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>